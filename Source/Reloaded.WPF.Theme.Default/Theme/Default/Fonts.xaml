<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib" 
                    xmlns:controls="clr-namespace:Reloaded.WPF.Controls;assembly=Reloaded.WPF">

    <ResourceDictionary.MergedDictionaries>
        <controls:FontFamilyResourceDictionary Source="/Theme/Default/Fonts/"/>
    </ResourceDictionary.MergedDictionaries>

    <sys:Double x:Key="FontSizeLargest">22</sys:Double>
    <sys:Double x:Key="FontSizeLarge">20</sys:Double>
    <sys:Double x:Key="FontSizeLarger">18</sys:Double>
    <sys:Double x:Key="FontSizeRegular">16</sys:Double>
    <sys:Double x:Key="FontSizeSmaller">14</sys:Double>
    <sys:Double x:Key="FontSizeSmall">12</sys:Double>
    <sys:Double x:Key="FontSizeTooltip">12</sys:Double>

</ResourceDictionary>