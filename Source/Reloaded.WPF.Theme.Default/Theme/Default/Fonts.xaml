<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="FontThin">./Theme/Default/Fonts/#Lato Thin</FontFamily>
    <FontFamily x:Key="FontLight">./Theme/Default/Fonts/#Lato Light</FontFamily>
    <FontFamily x:Key="FontRegular">./Theme/Default/Fonts/#Lato</FontFamily>
    <FontFamily x:Key="FontBold">./Theme/Default/Fonts/#Lato Bold</FontFamily>
    <FontFamily x:Key="FontBlack">./Theme/Default/Fonts/#Lato Black</FontFamily>

    <sys:Double x:Key="FontSizeLargest">22</sys:Double>
    <sys:Double x:Key="FontSizeLarge">20</sys:Double>
    <sys:Double x:Key="FontSizeLarger">18</sys:Double>
    <sys:Double x:Key="FontSizeRegular">16</sys:Double>
    <sys:Double x:Key="FontSizeSmaller">14</sys:Double>
    <sys:Double x:Key="FontSizeSmall">12</sys:Double>
    <sys:Double x:Key="FontSizeTooltip">12</sys:Double>

</ResourceDictionary>